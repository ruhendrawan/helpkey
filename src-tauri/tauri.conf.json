{
  "$schema": "https://schema.tauri.app/config/1",
  "build": {
    "beforeDevCommand": "npm run start",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist/helpkey/browser",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "helpkey",
    "version": "0.1.0"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": true,
      "title": "HelpKey"
    },
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "globalShortcut": {
        "all": true
      },
      "window": {
        "show": true,
        "hide": true,
        "setFocus": true,
        "setSize": true,
        "center": true,
        "setSkipTaskbar": true
      }
    },
    "windows": [
      {
        "title": "HelpKey",
        "width": 800,
        "height": 600,
        "alwaysOnTop": true,
        "transparent": true,
        "center": true,
        "skipTaskbar": true
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "category": "Education",
      "targets": "all",
      "identifier": "com.helpkey.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "macOSPrivateApi": true
  }
}
